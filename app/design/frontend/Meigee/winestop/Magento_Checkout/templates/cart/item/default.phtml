<script type="text/javascript">
    var qty_el = document.getElementById('qty');
    var qty = qty_el.value;            
    function qtyDown(){
        var qty_el = document.getElementById('qty');
        var qty = qty_el.value;               
        if( !isNaN( qty ) && qty > 0 ){
            qty_el.value--;
        }
        return false;
    }
    function qtyUp(){
        var qty_el = document.getElementById('qty');
        var qty = qty_el.value;
        if( !isNaN( qty )) {
            qty_el.value++;
        }               
        return false;
    }
</script>